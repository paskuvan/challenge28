<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Employee count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><h3><%= company.name %></h3></td>
        <td><%= link_to 'Show', company, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_company_path(company), :class => 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h5><%= link_to 'New Company', new_company_path, class: 'btn btn-primary' %></h5>
